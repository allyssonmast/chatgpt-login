module.exports = class UserRepositoryMock {
  constructor () {
    this.users = []
  }

  async save (user) {
    this.users.push(user)
    return user.id
  }

  async findByEmail (email) {
    return this.users.find((user) => user.email === email)
  }

  async findById (id) {
    return this.users.find((user) => user.id === id)
  }
}
